<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoPantalla"
    tools:context=".ResultadosInformes.ResultadosGeneral">

    <!--Titulo-->
        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="#D7B7EB"
            android:backgroundTintMode="src_atop"
            android:text="@string/evaluaciones_de_habilidades_adaptativas_registradas"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <!--Tipo de evaluacion letras azules -->
        <TextView
            android:id="@+id/txtvTipodeEvaluacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/tipo_de_evaluacion"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/colortextosblue"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <!--Spinner del tipo de evaluacion -->
        <Spinner
            android:id="@+id/spinnerTipoEvaluacion"
            android:layout_width="220dp"
            android:layout_height="56dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtvTipodeEvaluacion" />

    <!--Texto de seleccionar estudiante -->
        <TextView
            android:id="@+id/txtvSeleccionaEstudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/selecciona_estudiante"
            android:textColor="@color/colortextosblue"
            android:textSize="29sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerTipoEvaluacion" />

    <!--Spinner para seleccionar el estudiante con esa evaluacion -->
        <Spinner
            android:id="@+id/spinnerEstudiante"
            android:layout_width="351dp"
            android:layout_height="68dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtvSeleccionaEstudiante" />

    <!--Boton de ver resultados para ver graficos -->
        <Button
            android:id="@+id/btnVerResultados"
            android:layout_width="253dp"
            android:layout_height="60dp"
            android:layout_marginBottom="120dp"
            android:text="@string/ver_resultados"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>